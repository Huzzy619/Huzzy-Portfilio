{
    "builds": [
        {
            "src": "MyWeb/wsgi.py",
            "use": "@ardnt/vercel-python-wsgi",
            "config": { "maxLambdaSize": "15mb", "runtime": "python3.9" }
        }, 
        {
            "src": "build_files.sh",
            "use": "@vercel/static-build",
            "config": { 
                "distDir": "staticfiles"
        }
        }
    ],
    "routes":[
        {
            "src": "/(.*)",
            "dest": "/static/"
        },
        {
            "src": "/(.*)",
            "dest": "MyWeb/wsgi.py"
        }
    ]
} 
